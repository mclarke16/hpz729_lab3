<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/thor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thor"
        app:layout_constraintBottom_toTopOf="@+id/hulk"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <Button
        android:id="@+id/capitan_america"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capitan America"
        app:layout_constraintBottom_toTopOf="@+id/spiderman"
        app:layout_constraintEnd_toEndOf="@+id/doctor_strange"
        app:layout_constraintStart_toStartOf="@+id/doctor_strange"
        app:layout_constraintTop_toBottomOf="@+id/hulk" />

    <Button
        android:id="@+id/spiderman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:text="Spiderman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/capitan_america"
        app:layout_constraintStart_toStartOf="@+id/capitan_america"
        app:layout_constraintTop_toBottomOf="@+id/capitan_america" />

    <Button
        android:id="@+id/doctor_strange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Strange"
        app:layout_constraintEnd_toEndOf="@+id/hulk"
        app:layout_constraintStart_toStartOf="@+id/hulk"
        app:layout_constraintTop_toBottomOf="@+id/hulk" />

    <Button
        android:id="@+id/hulk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="Hulk"
        app:layout_constraintBottom_toTopOf="@+id/capitan_america"
        app:layout_constraintEnd_toEndOf="@+id/thor"
        app:layout_constraintStart_toStartOf="@+id/thor"
        app:layout_constraintTop_toBottomOf="@+id/thor" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="333dp"
        android:layout_height="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="58dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/thor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shield" />

</androidx.constraintlayout.widget.ConstraintLayout>